<tool id="interactive_tool_guacamole_desktop" tool_type="interactive" name="Ubuntu XFCE Desktop" version="0.1">
    <requirements>
        <container type="docker">cyverse/ubuntu18-xfce-desktop</container>
    </requirements>
    <entry_points>
        <entry_point name="Remote Desktop" requires_domain="True">
            <port>8000</port>
        </entry_point>
    </entry_points>
    <command><![CDATA[
        sudo -E /startup.sh
    ]]>
    </command>
    <inputs>
    </inputs>
    <outputs>
        <data name="outfile" format="txt" />
    </outputs>
    <tests>
    </tests>
    <help>
        Simple Ubuntu XFCE all-in-one desktop.
        Username: "user"
        Password: "password"
    </help>
</tool>
